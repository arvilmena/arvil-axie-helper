                <div style="display: none;">
                    {% for id in [2279441, 6462565, 3788420] %}
                        <div id="axie--data--{{ id }}s">
                            {% include '_partials/axie--data.twig' %}
                        </div>
                    {% endfor %}
                </div>


                <script>
                {% for id in [2279441, 6462565, 3788420] %}
                (function() {
                    tippy('#axie--{{ id }}', {
                        content(reference) {
                            const id = reference.getAttribute('data-template');
                            const template = document.getElementById(id);
                            return '<div class="axie--data-tooltip">' + template.innerHTML + '</div>';
                        },
                        allowHTML: true,
                        trigger: 'click',
                        onHide() {
                            return false;
                        }
                    });

                    var tippyInstance = document.getElementById('axie--{{ id }}')._tippy;

                    console.log('tippyInstance', tippyInstance);

                    tippyInstance.show();
                })();
                {% endfor %}
                </script>

            </div>
        </div>

    </div>

